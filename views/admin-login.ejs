<body>

    <!-- navBar ========================================================================== -->

    <%- include('../partials/navBar') %>

        <!-- admin - login ================================================================ -->

        <div id="container">
            <div id="form-box">
                <div id="button-box" style="text-align: center;">
                    <div id="btn"
                        style="width: 232px; background: linear-gradient(to bottom right, #F93154, #ff6881 15%, #720819 70%);">
                    </div>
                    <button type="button" class="toggle-button">Admin Log In</button>
                </div>

                <!-- login form =============== -->
                <form id="login" class="input-space" method="post" action="/admins/login">
                    <input type="text" class="input-field-login" placeholder="Enter your email id" required
                        name="email">
                    <input type="password" class="input-field-login" placeholder="Enter your password" required
                        name="pass">
                    <button type="submit" class="submit-button" style="width: 232px; background: linear-gradient(to bottom right, #F93154, #ff6881 15%, #720819 70%);">Log In</button>
                </form>

            </div>
        </div>

        <!-- footer ============================================================= -->
        <%- include('../partials/footer') %>



