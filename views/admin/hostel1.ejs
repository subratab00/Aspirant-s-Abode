                        // const td_info_i = document.createElement("i");
                        // td_info_i.classList.add("fas", "fa-info-circle");
                        // td_info.appendChild(td_info_i);
                    }
                    if (data.hostelNo === 1 && data.roomType === 'Sharing') {
                        const tbody = document.createElement("tbody");
                        h1_sharingRoomTable.appendChild(tbody);

                        const tr = document.createElement("tr");
                        tbody.appendChild(tr);

                        const td_id = document.createElement("td");
                        td_id.innerHTML = data._id;
                        tr.appendChild(td_id);

                        const td_fullname = document.createElement("td");
