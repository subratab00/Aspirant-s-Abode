        <script>

            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            })

            const h1_singleRoomTable = document.getElementById("h1-singleRoomTable");
            const h1_sharingRoomTable = document.getElementById("h1-sharingRoomTable");
            const h1_noOfSingleRooms = document.getElementById("h1-noOfSingleRooms");
            const h1_noOfSharingRooms = document.getElementById("h1-noOfSharingRooms");


            const allHostelites_h1 = fetch("/hostelites").then((res) => {
                return res.json();
            }).then((dataArray) => {

                dataArray.forEach((data) => {
                    if (data.hostelNo === 1 && data.roomType === 'Single') {
                        const tbody = document.createElement("tbody");
                        h1_singleRoomTable.appendChild(tbody);

                        const tr = document.createElement("tr");
                        tbody.appendChild(tr);

                        const td_id = document.createElement("td");
                        td_id.innerHTML = data._id;
                        tr.appendChild(td_id);

                        const td_fullname = document.createElement("td");
                        td_fullname.innerHTML = data.fullname;
                        tr.appendChild(td_fullname);

                        const td_gender = document.createElement("td");
                        td_gender.innerHTML = data.gender;
                        tr.appendChild(td_gender);

                        const td_email = document.createElement("td");
                        td_email.innerHTML = data.email;
                        tr.appendChild(td_email);

                        const td_mobileNo = document.createElement("td");
                        td_mobileNo.innerHTML = data.mobileNo;
                        tr.appendChild(td_mobileNo);

                        const td_college = document.createElement("td");
                        td_college.innerHTML = data.college;
                        tr.appendChild(td_college);

                        const td_roomNo = document.createElement("td");
                        td_roomNo.innerHTML = data.roomNo;
                        tr.appendChild(td_roomNo);

                        const td_isPaid = document.createElement("td");
                        tr.appendChild(td_isPaid);
                        const td_isPaid_label = document.createElement("label");
                        td_isPaid_label.classList.add("switch");
                        td_isPaid.appendChild(td_isPaid_label);
                        const td_isPaid_label_checkbox = document.createElement("input");
                        td_isPaid_label_checkbox.type = "checkbox";
                        td_isPaid_label_checkbox.checked = data.isPaid;
                        td_isPaid_label.appendChild(td_isPaid_label_checkbox);
                        const td_isPaid_label_slider = document.createElement("span");
                        td_isPaid_label_slider.classList.add("slider", "round");
                        td_isPaid_label.appendChild(td_isPaid_label_slider);

                        // const td_info = document.createElement("td");
