<body>
    <!-- navBar ====================================== -->
    <%- include('../../partials/navBar') %>


        <div class="dashboard-container">

            <!-- Admin Dashboard Bullets ======================== -->
            <%- include('aBullets') %>


                <!-- Admin Dashboard Body ==========================-->
                <div class="dashboard-body">

                    <div class="hostel-name">Hostel 3</div>

                    <div class="room-availability-box">
                        <div class="single-room">
                            <div class="roomType">Single Rooms</div>
                            <div class="noOfRooms" id="h3-noOfSingleRooms"> </div>
                        </div>
                        <div class="sharing-room">
                            <div class="roomType">Sharing Rooms</div>
                            <div class="noOfRooms" id="h3-noOfSharingRooms">  </div>
                        </div>
                    </div>

                    <div class="single-room-database">
                        <h3 class="database-name">Single Room Database</h3>
                        <div class="dataTable">
                            <table id="h3-singleRoomTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>Email</th>
                                        <th>Mobile No.</th>
                                        <th>College</th>
                                        <th>Room No.</th>
                                        <th>Paid</th>
                                        <!-- <th>Info</th> -->
                                    </tr>
                                </thead>
                                <tbody>

                                    
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="sharing-room-database">
                        <h3 class="database-name">Sharing Room Database</h3>
                        <div class="dataTable">
                            <table id="h3-sharingRoomTable">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Gender</th>
                                        <th>Email</th>
                                        <th>Mobile No.</th>
                                        <th>College</th>
                                        <th>Room No.</th>
                                        <th>Paid</th>
                                        <!-- <th>Info</th> -->
                                    </tr>
                                </thead>
                                <tbody>


                                </tbody>
                            </table>
                        </div>
                    </div>





                </div>

        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
        <script>
            const h3_singleRoomTable = document.getElementById("h3-singleRoomTable");
            const h3_sharingRoomTable = document.getElementById("h3-sharingRoomTable");
            const h3_noOfSingleRooms = document.getElementById("h3-noOfSingleRooms");
            const h3_noOfSharingRooms = document.getElementById("h3-noOfSharingRooms");


            const allHostelites_h3 = fetch("/hostelites").then((res) => {
                return res.json();
            }).then((dataArray) => {
                dataArray.forEach((data) => {
                    if (data.hostelNo === 3 && data.roomType === 'Single') {
                        const tbody = document.createElement("tbody");
                        h3_singleRoomTable.appendChild(tbody);

                        const tr = document.createElement("tr");
                        tbody.appendChild(tr);

                        const td_id = document.createElement("td");
                        td_id.innerHTML = data._id;
                        tr.appendChild(td_id);

                        const td_fullname = document.createElement("td");
                        td_fullname.innerHTML = data.fullname;
                        tr.appendChild(td_fullname);

                        const td_gender = document.createElement("td");
                        td_gender.innerHTML = data.gender;
                        tr.appendChild(td_gender);

                        const td_email = document.createElement("td");
                        td_email.innerHTML = data.email;
                        tr.appendChild(td_email);

                        const td_mobileNo = document.createElement("td");
                        td_mobileNo.innerHTML = data.mobileNo;
                        tr.appendChild(td_mobileNo);

                        const td_college = document.createElement("td");
                        td_college.innerHTML = data.college;
                        tr.appendChild(td_college);

                        const td_roomNo = document.createElement("td");
                        td_roomNo.innerHTML = data.roomNo;
                        tr.appendChild(td_roomNo);

                        const td_isPaid = document.createElement("td");
                        tr.appendChild(td_isPaid);
                        const td_isPaid_label = document.createElement("label");
                        td_isPaid_label.classList.add("switch");
                        td_isPaid.appendChild(td_isPaid_label);
                        const td_isPaid_label_checkbox = document.createElement("input");
                        td_isPaid_label_checkbox.type = "checkbox";
                        td_isPaid_label_checkbox.checked = data.isPaid;
                        td_isPaid_label.appendChild(td_isPaid_label_checkbox);
                        const td_isPaid_label_slider = document.createElement("span");
                        td_isPaid_label_slider.classList.add("slider", "round");
                        td_isPaid_label.appendChild(td_isPaid_label_slider);

                        // const td_info = document.createElement("td");
                        // tr.appendChild(td_info);
                        // const td_info_i = document.createElement("i");
                        // td_info_i.classList.add("fas", "fa-info-circle");
                        // td_info.appendChild(td_info_i);
                    }
                    if (data.hostelNo === 3 && data.roomType === 'Sharing') {
                        const tbody = document.createElement("tbody");
                        h3_sharingRoomTable.appendChild(tbody);

                        const tr = document.createElement("tr");
                        tbody.appendChild(tr);

                        const td_id = document.createElement("td");
                        td_id.innerHTML = data._id;
                        tr.appendChild(td_id);

                        const td_fullname = document.createElement("td");
                        td_fullname.innerHTML = data.fullname;
                        tr.appendChild(td_fullname);

                        const td_gender = document.createElement("td");
                        td_gender.innerHTML = data.gender;
                        tr.appendChild(td_gender);

                        const td_email = document.createElement("td");
                        td_email.innerHTML = data.email;
                        tr.appendChild(td_email);

                        const td_mobileNo = document.createElement("td");
                        td_mobileNo.innerHTML = data.mobileNo;
                        tr.appendChild(td_mobileNo);

                        const td_college = document.createElement("td");
                        td_college.innerHTML = data.college;
                        tr.appendChild(td_college);

                        const td_roomNo = document.createElement("td");
                        td_roomNo.innerHTML = data.roomNo;
                        tr.appendChild(td_roomNo);

                        const td_isPaid = document.createElement("td");
                        tr.appendChild(td_isPaid);
                        const td_isPaid_label = document.createElement("label");
                        td_isPaid_label.classList.add("switch");
                        td_isPaid.appendChild(td_isPaid_label);
                        const td_isPaid_label_checkbox = document.createElement("input");
                        td_isPaid_label_checkbox.type = "checkbox";
                        td_isPaid_label_checkbox.checked = data.isPaid;
                        td_isPaid_label.appendChild(td_isPaid_label_checkbox);
                        const td_isPaid_label_slider = document.createElement("span");
                        td_isPaid_label_slider.classList.add("slider", "round");
                        td_isPaid_label.appendChild(td_isPaid_label_slider);

                        // const td_info = document.createElement("td");
                        // tr.appendChild(td_info);
                        // const td_info_i = document.createElement("i");
                        // td_info_i.classList.add("fas", "fa-info-circle");
                        // td_info.appendChild(td_info_i);
                    }
                })
                let h3_single = 0;
                let h3_sharing = 0;
                dataArray.forEach((data)=>{
                    if(data.hostelNo===3 && data.roomType === 'Single'){
                        h3_single++;
                    }
                    if(data.hostelNo===3 && data.roomType==='Sharing'){
                        h3_sharing++;
                    }
                })
                h3_noOfSingleRooms.innerHTML = `${h3_single}/10`;
                h3_noOfSharingRooms.innerHTML = `${h3_sharing}/10`;

            }).catch((error) => {
                console.log(error);
            });
        </script>
</body>

</html>